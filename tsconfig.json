{
	"compileOnSave": false,
	"compilerOptions": {
    "allowJs": true,
		"alwaysStrict": true,
		"baseUrl": "./node_modules",
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"lib": [ "ES2019", "dom" ],
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"noEmit": false,
		"noEmitOnError": true,
		"noImplicitAny": false,
		"noImplicitReturns": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"removeComments": true,
		"rootDir": "./src",
		"skipLibCheck": true,
		"sourceMap": true,
		"strictNullChecks": true,
		"target": "ESNext",
	},
	"include": [
		"src/**/*.ts"
	]
}